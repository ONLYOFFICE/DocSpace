<?xml version="1.0" encoding="UTF-8"?>
<nlog>
	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
		<add assembly="ASC.Common" />
	</extensions>
	<variable name ="name" value ="mail.agg" />
	<variable name ="dir" value ="../../../../../../../Logs/" />
	<conversionPattern value="" />
	<targets async="true">
		<default-target-parameters type="SelfCleaning" encoding="utf-8" archiveNumbering="DateAndSequence" archiveEvery="Day" enableArchiveFileCompression="true" archiveAboveSize="52428800" keepFileOpen="true" archiveDateFormat="MM-dd" layout="${date:format=yyyy-MM-dd HH\:mm\:ss,fff} ${level:uppercase=true} [${threadid}] ${logger} - ${message} ${exception:format=ToString}" />
		<target name="console" type="ColoredConsole" useDefaultRowHighlightingRules="true" layout="${date:format=yyyy-MM-dd HH\:mm\:ss,fff} ${level:uppercase=true:padding=5} [${threadid:padding=3}] ${logger} - ${message}" />
		<target name="file" type="SelfCleaning" fileName="${var:dir}${var:name}.log" />
		<target name="error" type="SelfCleaning" fileName="${var:dir}${var:name}.errors.log"/>
		<target name="sql" type="SelfCleaning" fileName="${var:dir}${var:name}.sql.log" layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss,fff}|${threadid}|${event-properties:item=duration}|${message}|${event-properties:item=sql}|${event-properties:item=sqlParams}" />
		<target name="stat" type="SelfCleaning" fileName="${var:dir}${var:name}.stat.log" layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss,fff}|${threadid}|${event-properties:item=duration}|${message}|${event-properties:item=status}|${event-properties:item=mailboxId}|${event-properties:item=address}"/>
	</targets>
	<rules>
		<logger name="ASC.SQL" minlevel="Debug" writeTo="sql" final ="true" />
		<logger name="ASC.Mail.Stat" minlevel="Debug" writeTo="stat" final ="true" />
		<logger name="ASC.Mail*" minlevel="Debug" writeTo="file,console" />
		<logger name="ASC*" minlevel="Warn" writeTo="error" />
	</rules>
</nlog>