#----------------------------------
#         Base Image         
#----------------------------------
FROM ubuntu:22.04 AS base

ARG SRC_PATH
ARG BUILD_PATH
ARG APP_STORAGE_ROOT
ARG PATH_TO_CONF
ARG LOG_DIR
ARG PRODUCT
ARG DEBIAN_FRONTEND=noninteractive

# --- Make company/user/group name configurable ---
ARG COMPANY=${PRODUCT}
