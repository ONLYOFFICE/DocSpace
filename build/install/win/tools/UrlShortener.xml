<service>
	<id>ASC.UrlShortener</id>
	<name>ASC.UrlShortener</name>
	<description>This service runs ASC.UrlShortener</description>
	<priority>RealTime</priority>
	<startmode>Automatic</startmode>
	<onfailure action="restart" delay="1 sec"/>
	<executable>&quot;{APPDIR}services\ASC.UrlShortener\service\index.js&quot;</executable>
	<workingdirectory>{APPDIR}services\ASC.UrlShortener\service</workingdirectory>
	<log mode="roll-by-size">
  		<sizeThreshold>10240</sizeThreshold>
  		<keepFiles>8</keepFiles>
	</log>
</service>