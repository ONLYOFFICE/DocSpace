<service>
	<id>ASC.SsoAuth</id>
	<name>ASC.SsoAuth</name>
	<description>This service runs ASC.SsoAuth</description>
	<priority>RealTime</priority>
	<startmode>Automatic</startmode>
	<onfailure action="restart" delay="1 sec"/>
	<executable>&quot;{APPDIR}services\ASC.SsoAuth\service\app.js&quot;</executable>
	<workingdirectory>{APPDIR}services\ASC.SsoAuth\service</workingdirectory>
	<log mode="roll-by-size">
  		<sizeThreshold>10240</sizeThreshold>
  		<keepFiles>8</keepFiles>
	</log>
</service>