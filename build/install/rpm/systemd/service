[Unit]
Description=AppServer-${SERVICE_NAME}
After=network.target syslog.target

[Service]
PIDFile=/run/appserver/appserver-${SERVICE_NAME}.pid
Type=forking
User=onlyoffice
Group=onlyoffice
WorkingDirectory=${WORK_DIR}
ExecStart=${EXEC_START}
TimeoutSec=600

Restart=no
PrivateTmp=false

[Install]
WantedBy=multi-user.target
