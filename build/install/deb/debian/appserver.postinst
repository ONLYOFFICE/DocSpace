command_exists () {
    type "$1" &> /dev/null;
}

check_apt() {
	if  command_exists apt-get; then
	    type "$1" &> /dev/null;
	    echo "apt-get installed";
	else 
	    echo "command apt-get not found"
	    exit 1; 
	fi
}

